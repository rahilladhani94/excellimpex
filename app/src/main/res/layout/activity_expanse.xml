<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:padding="2dp"
            android:src="@drawable/back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="false"
        android:background="@color/colorPrimary"></View>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/edtFrom"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Travel From."
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />
                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtTo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Travel To."
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />
                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtVisitType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Visit Type."
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />
                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtAllowance"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Daily Allowance."
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />

                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtFare"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Fare in Rs."
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/llphotoFare"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gotham_bold"
                        android:layout_marginTop="20dp"
                        android:text="Photo for Fare:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:background="@drawable/rectanglered"
                        android:layout_marginTop="10dp"
                        android:layout_width="170dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:padding="2dp"
                            android:layout_centerInParent="true"
                            android:layout_width="30dp"
                            android:src="@mipmap/ic_add"
                            android:layout_height="30dp" />
                        <ImageView
                            android:id="@+id/ivpicFare"

                            android:layout_width="170dp"
                            android:layout_height="150dp" />
                    </RelativeLayout>
                </LinearLayout>



                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtStationary"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Total Stationary Expanses in Rs."
                    android:padding="8dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />
                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edtXerox"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Total Xerox Expanses in Rs."
                    android:padding="8dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/llphotoStXe"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gotham_bold"
                        android:layout_marginTop="20dp"
                        android:text="Photo for Stationary + Xerox :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:background="@drawable/rectanglered"
                        android:layout_marginTop="10dp"
                        android:layout_width="170dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:padding="2dp"
                            android:layout_centerInParent="true"
                            android:layout_width="30dp"
                            android:src="@mipmap/ic_add"
                            android:layout_height="30dp" />
                        <ImageView
                            android:id="@+id/ivpicStXe"

                            android:layout_width="170dp"
                            android:layout_height="150dp" />
                    </RelativeLayout>
                </LinearLayout>


                <EditText
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginBottom="30dp"

                    android:layout_marginTop="15dp"
                    android:id="@+id/edtExpanses"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectanglered"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="Total Expanse in Rs."
                    android:padding="8dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />



                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="200dp"

                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>