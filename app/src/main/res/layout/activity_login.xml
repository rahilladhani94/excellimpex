<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/ivBack"
            android:padding="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <View
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="false"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="visible"
                android:src="@mipmap/applogo"
                android:gravity="center"
                android:layout_width="170dp"
                android:layout_height="150dp" />




            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@drawable/rectangle_transparent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_email"
                        android:layout_width="23dp"
                        android:layout_height="23dp" />
                    <EditText

                        android:fontFamily="@font/proxima_nova"
                        android:id="@+id/edtEmail"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:hint="Email Id "
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:textColorHint="@color/login_text_color"
                        android:layout_height="45dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_transparent"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_lock" />
                <EditText

                    android:fontFamily="@font/proxima_nova"
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="18sp" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="25dp"

                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Login as "
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/llsales"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:clickable="false"

                        android:checked="true"
                        android:id="@+id/checkBoxSales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="" />
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Sales Person"
                        android:textSize="18sp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llmanager"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:clickable="false"

                        android:id="@+id/checkBoxManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="" />
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Sales Manager"
                        android:textSize="18sp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llstockies"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:clickable="false"

                        android:id="@+id/checkBoxStockiest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="" />
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Super Stockist"
                        android:textSize="18sp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <Button
                    android:fontFamily="@font/gotham_bold"
                    android:layout_marginBottom="20dp"

                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/btnSubmit"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Login" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>