<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="visible"
    android:layout_height="match_parent"
    tools:context="com.excelimpex.Activities.ActivityLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView

            android:layout_marginLeft="15dp"
            android:id="@+id/ivBack"
            android:padding="2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/txtLogout"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/gotham_bold"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="Log Out"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="false"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/bevan"
            android:gravity="center"
            android:text="Excel Impex Private Limited"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="5dp"
                android:background="@drawable/rectanglered"
                android:id="@+id/ivuser"
                android:src="@mipmap/ic_user"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_bold"
                    android:id="@+id/txtName"
                    android:textSize="18sp"
                    android:textColor="@color/active_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:singleLine="true"

                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_bold"
                    android:id="@+id/txtEmail"
                    android:textSize="18sp"
                    android:textColor="@color/active_blue"
                    android:text="aaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtLoginWork"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlNeworder"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/proxima_nova"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Submit New Order"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/next"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/view_color"
        android:layout_alignParentBottom="false"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
        <RelativeLayout
            android:id="@+id/rlNewPhoto"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Add Store Visit"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/view_color"
            android:layout_alignParentBottom="false"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


        <RelativeLayout
            android:id="@+id/rladdExpanse"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Add Expanse / Expanses History"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <View
            android:layout_marginTop="20dp"
            android:background="@color/view_color"
            android:layout_alignParentBottom="false"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:id="@+id/rlTarget"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Targets and Achievements"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <View
            android:layout_marginTop="20dp"
            android:background="@color/view_color"
            android:layout_alignParentBottom="false"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlLocation"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Send Location Update"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>
